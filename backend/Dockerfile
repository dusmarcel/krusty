FROM rust:latest AS build
WORKDIR /build
ARG POSTGRES_HOST
ARG POSTGRES_DATABASE
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG VALKEY_HOST
ARG VALKEY_PORT
ARG VALKEY_PASSWORD
ARG SECRET_KEY
ARG BACKEND_IF
ENV POSTGRES_HOST=$POSTGRES_HOST
ENV POSTGRES_DATABASE=$POSTGRES_DATABASE
ENV POSTGRES_USER=$POSTGRES_USER
ENV POSTGRES_PASSWORD=$POSTGRES_PASSWORD
ENV VALKEY_HOST=$VALKEY_HOST
ENV VALKEY_PORT=$VALKEY_PORT
ENV VALKEY_PASSWORD=$VALKEY_PASSWORD
ENV SECRET_KEY=$SECRET_KEY
ENV BACKEND_IF=$BACKEND_IF
COPY . .
RUN cargo build --release

FROM debian:stable-slim AS final
RUN apt update && apt install -y libssl3
WORKDIR /app
COPY --from=build /build/target/release/backend backend
USER 1001
EXPOSE 8161
CMD [ "/app/backend" ]